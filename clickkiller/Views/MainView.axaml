<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:clickkiller.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="clickkiller.Views.MainView"
             x:DataType="vm:MainViewModel">
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*">
    <StackPanel Grid.Row="0" Margin="10">
      <TextBox Text="{Binding Application}" Watermark="Application" Margin="0,0,0,10"/>
      <TextBox Text="{Binding Notes}" Watermark="Notes" Height="100" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10"/>
      <Button Content="Save Issue" Command="{Binding SaveCommand}" HorizontalAlignment="Left"/>
    </StackPanel>
    <DataGrid Grid.Row="1" ItemsSource="{Binding Issues}" AutoGenerateColumns="False" IsReadOnly="True">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" />
        <DataGridTextColumn Header="Application" Binding="{Binding Application}" />
        <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>

